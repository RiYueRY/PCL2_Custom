<local:MyCard Title="Minecraft 启动中心" Margin="0,0,0,15" CanSwap="False">
    <StackPanel Margin="25,40,23,15">
        <TextBlock TextWrapping="Wrap" Margin="0,0,0,15" FontSize="16" Foreground="{DynamicResource ColorBrush3}"
                    Text="准备好开始冒险了吗？" />
        
        <!-- 主功能区 - 统一按钮高度为38 -->
        <Grid Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <local:MyButton Grid.Column="0" Margin="0,0,10,0" Height="38" ColorType="Highlight"
                        Text="启动游戏" EventType="启动游戏" EventData="\current" />
            <local:MyButton Grid.Column="1" Margin="0,0,10,0" Height="38"
                        Text="下载游戏" EventType="切换页面" EventData="1|1" ToolTip="下载新游戏版本" />
            <local:MyButton Grid.Column="2" Margin="0,0,0,0" Height="38"
                        Text="启动设置" EventType="切换页面" EventData="3|0" ToolTip="管理游戏启动相关设置" />
        </Grid>
        
        <!-- 快捷功能 - 保持高度38一致 -->
        <TextBlock TextWrapping="Wrap" Margin="0,15,0,8" FontWeight="Bold"
                    Text="快捷工具" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <local:MyButton Grid.Column="0" Margin="0,0,10,0" Height="38"
                        Text="清理垃圾" EventType="清理垃圾" ToolTip="清理无用缓存文件" />
            <local:MyButton Grid.Column="1" Margin="0,0,10,0" Height="38"
                        Text="内存优化" EventType="内存优化" ToolTip="优化系统内存使用" />
            <local:MyButton Grid.Column="2" Margin="0,0,0,0" Height="38"
                        Text="全局设置" EventType="切换页面" EventData="3|2" ToolTip="启动器全局设置" />
        </Grid>
    </StackPanel>
</local:MyCard>

<!-- 其余部分保持不变 -->

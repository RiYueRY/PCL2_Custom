                    Title="2b2t" Info="最古老的生存服务器 | 使用当前版本"
                    EventType="启动游戏" EventData="\current|2b2t.org" Type="Clickable" />
        
        <local:MyListItem Margin="-5,2,-5,8"
                    Title="Mineplex" Info="经典小游戏服务器 | 使用当前版本"
                    EventType="启动游戏" EventData="\current|us.mineplex.com" Type="Clickable" />
